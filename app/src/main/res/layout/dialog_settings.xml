<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_style">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/sound_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/musicToggleButton2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Toggle Music"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_music_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Music"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/sfxToggleButton2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Toggle Sound FX"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_sfx_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Sound FX"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/reportBugButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sound_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8B0000"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Report Bug"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/aboutButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reportBugButton"
            android:layout_centerHorizontal="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="About"
            android:textColor="@color/purple_200"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:layout_gravity="top|end"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Close"
        android:padding="8dp"
        android:scaleType="fitEnd"
        android:src="@drawable/my_close_button"
        android:visibility="visible" />

</FrameLayout>