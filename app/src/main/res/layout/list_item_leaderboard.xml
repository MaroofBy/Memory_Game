<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="#F8FAFC"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp">

        <!-- Rank / Medal -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/rankTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="4." />

            <ImageView
                android:id="@+id/medalImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="Rank Medal"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:src="@drawable/ic_gold_medal"
                tools:visibility="visible" />
        </FrameLayout>

        <!-- Player Name -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="Player Name" />

        <!-- Difficulty -->
        <TextView
            android:id="@+id/extraTextView1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="IMPOSSIBLE" />

        <!-- Time / Level -->
        <TextView
            android:id="@+id/extraTextView2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="70s" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
